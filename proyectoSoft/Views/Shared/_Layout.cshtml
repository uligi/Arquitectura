    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
<script>
            $(document).ready(function () {
                $('#startTutorial').click(function () {
                    // Expande todas las secciones inicialmente
                    $('.collapse').collapse('show');

                    introJs().setOptions({
                        steps: [
                            {
                                intro: "Bienvenido al Sistema de Cotización de Cargas Dunamis. Te guiaremos a través de las diferentes secciones del sistema."
                            },
                            {
                                element: '.navbar-brand',
                                intro: "Este es el logo y título del sistema que te lleva de vuelta a la página de inicio desde cualquier parte del sistema."
                            },
                            {
                                element: '#sidebarToggle',
                                intro: "Este botón permite colapsar o expandir el menú de navegación lateral para maximizar el espacio de trabajo."
                            },
                            {
                                element: '.fa-user',
                                intro: "Aquí puedes acceder a las opciones del usuario, incluyendo cerrar sesión."
                            },
                            {
                                element: '#sidenavAccordion',
                                intro: "Este es el menú de navegación lateral donde puedes acceder a las diferentes funcionalidades del sistema."
                            },
                            {
                                element: '#collapseCotizarCarga',
                                intro: "En esta sección puedes cotizar diferentes tipos de carga y ver las cotizaciones guardadas."
                            },
                            {
                                element: 'a[href*="CotizarCarga"]',
                                intro: "Aquí puedes cotizar una nueva carga."
                            },
                            {
                                element: 'a[href*="CargasCotizadas"]',
                                intro: "Aquí puedes ver las cotizaciones de carga guardadas."
                            },
                            {
                                element: '#collapseFacturar',
                                intro: "En esta sección puedes facturar las cargas cotizadas y ver las facturas guardadas."
                            },
                            {
                                element: 'a[href*="Facturar"]',
                                intro: "Aquí puedes facturar una nueva carga."
                            },
                            {
                                element: 'a[href*="FacturasGuardadas"]',
                                intro: "Aquí puedes ver las facturas guardadas."
                            },
                            {
                                element: '#collapseReportes',
                                intro: "En esta sección puedes ver diversos reportes relacionados con las cargas y facturas."
                            },
                            {
                                element: 'a[href*="MontosPorTiposCargas"]',
                                intro: "Aquí puedes ver los montos totales cobrados por tipo de carga."
                            },
                            {
                                element: 'a[href*="MontosPorConceptoDescuentos"]',
                                intro: "Aquí puedes ver los montos por concepto de descuentos."
                            },
                            {
                                element: 'a[href*="MontosPorPeriodo"]',
                                intro: "Aquí puedes ver los conceptos por periodos."
                            },
                            {
                                element: 'a[href*="Cliente"]',
                                intro: "Aquí puedes gestionar la información de los clientes."
                            },
                            {
                                element: '#collapseMantenimiento',
                                intro: "En esta sección puedes gestionar descuentos, impuestos, ubicaciones, contactos y tipos relacionados con la empresa."
                            },
                            {
                                element: 'a[href*="Descuentos"]',
                                intro: "Aquí puedes gestionar los descuentos."
                            },
                            {
                                element: 'a[href*="Impuesto"]',
                                intro: "Aquí puedes gestionar los impuestos."
                            },
                            {
                                element: 'a[href*="Provincia"]',
                                intro: "Aquí puedes gestionar las provincias."
                            },
                            {
                                element: 'a[href*="Canton"]',
                                intro: "Aquí puedes gestionar los cantones."
                            },
                            {
                                element: 'a[href*="Distrito"]',
                                intro: "Aquí puedes gestionar los distritos."
                            },
                            {
                                element: 'a[href*="TipoCorreo"]',
                                intro: "Aquí puedes gestionar los tipos de correo."
                            },
                            {
                                element: 'a[href*="TipoTelefono"]',
                                intro: "Aquí puedes gestionar los tipos de teléfono."
                            },
                            {
                                element: 'a[href*="TipoPago"]',
                                intro: "Aquí puedes gestionar los tipos de pago."
                            },
                            {
                                element: 'a[href*="TipoCliente"]',
                                intro: "Aquí puedes gestionar los tipos de cliente."
                            },
                            {
                                element: 'a[href*="TipoImpuestos"]',
                                intro: "Aquí puedes gestionar los tipos de impuestos."
                            },
                            {
                                element: 'a[href*="TipoDescuentos"]',
                                intro: "Aquí puedes gestionar los tipos de descuentos."
                            },
                            {
                                element: 'a[href*="TiposDeCarga"]',
                                intro: "Aquí puedes gestionar los tipos de carga."
                            },
                            {
                                element: '#collapseSeguridad',
                                intro: "En esta sección puedes gestionar usuarios, roles y permisos de acceso al sistema."
                            },
                            {
                                element: 'a[href*="Usuarios"]',
                                intro: "Aquí puedes gestionar los usuarios."
                            },
                            {
                                element: 'a[href*="Roles"]',
                                intro: "Aquí puedes gestionar los roles."
                            },
                            {
                                element: 'a[href*="Permisos"]',
                                intro: "Aquí puedes gestionar los permisos."
                            },
                            {
                                intro: "Esto concluye el tutorial del menú del sistema. ¡Gracias por tu atención!"
                            }
                        ],
                       showProgress: true,
                        exitOnOverlayClick: false,
                        exitOnEsc: true,
                        showStepNumbers: true,
                        nextLabel: 'Siguiente',
                        prevLabel: 'Anterior',
                        skipLabel: 'Salir',
                        doneLabel: 'Finalizar'
                    }).oncomplete(function() {
                        swal({
                            title: '¿Quieres continuar con una simulación de una cotización?',
                            text: '',
                            type: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'Sí',
                            cancelButtonText: 'No',
                            closeOnConfirm: false,
                            closeOnCancel: true
                        },
                        function(isConfirm) {
                            if (isConfirm) {
                                    window.location.href = '@Url.Action("CotizarCarga", "CotizarCarga")#tutorial';
                               }
                        });
                    }).start();
                });
            });


</script>
    

</body>


</html>
