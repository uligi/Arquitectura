<<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400&display=swap' rel='stylesheet'>
    <title>@ViewBag.Title - Patitos Financieros S.A.</title>
    @Styles.Render("~/Content/css")
    <link href='~/Content/css/LayoutPatitos.css' rel='stylesheet'>
</head>
<body class="sb-nav-fixed" style="background-color: #f0f0f0;">
    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color: #000000;">
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Home")">
            <img src="~/Imagenes/Ilustración254.png" alt="Logo Patitos Financieros" style="max-width: 40px; vertical-align: middle; margin-right: 10px;">
            <span style="color: #FFD700;">Patitos Financieros</span>
        </a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars" style="color: #FFA500;"></i></button>
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw" style="color: #FFA500;"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("CerrarSesion", "Acceso")">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion" style="background-color: #000000;">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (Session["Rol"] != null && (Session["Rol"].ToString() == "Gerente" || Session["Rol"].ToString() == "Contador" || Session["Rol"].ToString() == "Analista de Ventas"))
                        {
                            <div class="sb-sidenav-menu-heading" style="color: #FFD700;">Módulos Financieros</div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseContabilidad" aria-expanded="false" aria-controls="collapseContabilidad" style="color: #FFF;">
                                <div class="sb-nav-link-icon"><i class="fas fa-calculator" style="color: #FFA500;"></i></div>
                                Contabilidad de Costos
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down" style="color: #FFA500;"></i></div>
                            </a>
                            <div class="collapse" id="collapseContabilidad" aria-labelledby="headingContabilidad" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" href="@Url.Action("CostosPorOrden", "Contabilidad")" style="color: #FFF;">Sistemas de Costos</a>
                                </nav>
                            </div>
                        }
                        @if (Session["Rol"] != null && Session["Rol"].ToString() == "Gerente")
                        {
                            <div class="sb-sidenav-menu-heading" style="color: #FFD700;">Reportes</div>
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseReportes" aria-expanded="false" aria-controls="collapseReportes" style="color: #FFF;">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-bar" style="color: #FFA500;"></i></div>
                                Proyecciones
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down" style="color: #FFA500;"></i></div>
                            </a>
                            <div class="collapse" id="collapseReportes" aria-labelledby="headingReportes" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" href="@Url.Action("ProyeccionesGastos", "Reportes")" style="color: #FFF;">Proyecciones de Gastos</a>
                                    <a class="nav-link" href="@Url.Action("ProyeccionesVentas", "Reportes")" style="color: #FFF;">Proyecciones de Ventas</a>
                                </nav>
                            </div>
                        }
                        <div class="sb-sidenav-menu-heading" style="color: #FFD700;">Control</div>
                        <a class="nav-link" href="@Url.Action("CuentasContables", "Control")" style="color: #FFF;">
                            <div class="sb-nav-link-icon"><i class="fas fa-book" style="color: #FFA500;"></i></div>
                            Cuentas Contables
                        </a>
                        <a class="nav-link" href="@Url.Action("Gastos", "Control")" style="color: #FFF;">
                            <div class="sb-nav-link-icon"><i class="fas fa-money-bill-wave" style="color: #FFA500;"></i></div>
                            Registro de Gastos
                        </a>
                        <a class="nav-link" href="@Url.Action("Ventas", "Control")" style="color: #FFF;">
                            <div class="sb-nav-link-icon"><i class="fas fa-dollar-sign" style="color: #FFA500;"></i></div>
                            Registro de Ventas
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer" style="background-color: #FFD700;">
                    <div class="small" style="color: #000;">Bienvenido:</div>
                    @if (Session["NombreUsuario"] != null)
                    {
                        <span style="color: #000;">
                            @Session["NombreUsuario"]
                            @Session["Rol"]
                        </span>
                    }
                    else
                    {
                        <span style="color: #000;">Invitado</span>
                    }
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 mt-auto" style="background-color: #000000; color: #FFF;">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; Patitos Financieros S.A. @DateTime.Now.Year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/intro.js/4.0.0/intro.min.js"></script>


