@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administrar</a></li>
    <li class="breadcrumb-item active">Roles</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-user me-1"></i> Lista de Roles
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Agregar</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Rol</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Rol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="RolID" type="hidden" value="0" />

                <div class="mb-3">
                    <label for="rol" class="form-label">Nombre del Rol</label>
                    <input type="text" class="form-control" id="rol">
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="descripcion">
                </div>

                <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">
                    Todos los campos son obligatorios.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <!-- Incluye la librería de SweetAlert si no lo has hecho -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        var tabladata;
        var filaseleccionada;
        $(document).ready(function () {
            tabladata = $("#tabla").DataTable({
                responsive: true,
                "ajax": {
                    url: '@Url.Action("ListarRoles", "Roles")',
                    type: "GET",
                    datatype: "json"
                },
                "columns": [
                    { "data": "Rol" },
                    { "data": "Descripcion" },
                    {
                        "defaultContent": '<div class="btn-group">' +
                                          '<button type="button" class="btn btn-primary btn-small btn-editar"><i class="fas fa-pen"></i></button>' +
                                          '<button type="button" class="btn btn-danger btn-small ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>' +
                                          '</div>',
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Spanish.json"
                }
            });

            $('#tabla tbody').on('click', '.btn-editar', function () {
                var data = tabladata.row($(this).parents('tr')).data();
                abrirModal(data);
            });

            $('#tabla tbody').on('click', '.btn-eliminar', function () {
                var data = tabladata.row($(this).parents('tr')).data();
                swal({
                    title: "¿Estás seguro?",
                    text: "¡No podrás recuperar este rol!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-danger",
                    confirmButtonText: "¡Sí, bórralo!",
                    closeOnConfirm: false
                }, function () {
                    $.ajax({
                        url: '@Url.Action("EliminarRol", "Roles")',
                        type: "POST",
                        data: JSON.stringify({ RolID: data.RolID }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {


                            if (data.resultado) {
                                tabladata.row(filaseleccionada).remove().draw();
                                swal("¡Eliminado!", "El Rol ha sido eliminado.", "success");
                            } else {
                                swal("Error", data.mensaje, "error");
                            }
                        },
                        error: function (error) {

                            swal("Error", "Hubo un problema con la solicitud.", "error");
                        }
                    });
                });
            });
        });

        function abrirModal(data) {
            // Reinicia el formulario y prepara para un nuevo rol o para editar uno existente
            $("#RolID").val(0);
            $("#rol").val("");
            $("#descripcion").val("");
            $("#mensajeError").hide();

            // Cambia el título del modal y llena los campos si es edición
            if (data) {
                $("#RolID").val(data.RolID);
                $("#rol").val(data.Rol);
                $("#descripcion").val(data.Descripcion);
                $("#exampleModalLabel").text("Editar Rol");
            } else {
                $("#exampleModalLabel").text("Agregar Rol");
            }

            $("#FormModal").modal("show");
        }

          function Guardar() {
                var rol = {
                    RolID: parseInt($("#RolID").val()),
                    Rol: $("#rol").val().trim(),
                    Descripcion: $("#descripcion").val().trim()
                };

                // Validación básica
                if (!rol.Rol || !rol.Descripcion) {
                    $("#mensajeError").text("Todos los campos son obligatorios.");
                    $("#mensajeError").show();
                    return;
                } else {
                    $("#mensajeError").hide();
                }

             

                // Mostrar el objeto que será enviado
                console.log("Objeto Rol enviado:", rol);

                // Hacer la petición AJAX al servidor
                $.ajax({
                    url: '@Url.Action("GuardarRol", "Roles")',
                    type: "POST",
                    data: JSON.stringify(rol),
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.resultado) {
                            tabladata.ajax.reload();
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(response.mensaje);
                            $("#mensajeError").show();
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error en la solicitud AJAX:", error);
                        $("#mensajeError").text("Hubo un problema al guardar el rol.");
                        $("#mensajeError").show();
                    }
                });
            }




    </script>
}
